<Page x:Class="Dictionary.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dictionary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="#BB31E4D7">
        <local:NavigationBar Loaded="NavigationBar_Loaded" Grid.Row="0" Height="50" VerticalAlignment="Top"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Username:"/>
                <TextBox x:Name="usernameTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Password:"/>
                <PasswordBox x:Name="passwordBox" Width="200"/>
            </StackPanel>
            <Button Content="Login" Click="LoginClick" Width="100"  Background="White"/>
        </StackPanel>
    </Grid>
</Page>
