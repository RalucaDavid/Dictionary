        <TextBlock Text="Dictionary" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" Foreground="White" FontFamily="Segoe UI Black"/>
        <Button Grid.Column="2" Content="Search" Click="SearchClick" Margin="106,10,-82,10" Foreground="Black" Background="White" FontWeight="Bold"/>
        <Button Grid.Column="2" Content="Entertainment" Click="EntertainmentClick" Margin="282,10,-274,10" Background="White" FontWeight="Bold"/>
        <Button Grid.Column="2" Content="Admin" Click="AdminClick" Margin="567,10,-547,10" Background="White" FontWeight="Bold"/>
    </Grid>
</UserControl>

