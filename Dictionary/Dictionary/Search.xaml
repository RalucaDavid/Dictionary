<Page x:Class="Dictionary.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dictionary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid Background="#BB31E4D7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:NavigationBar Loaded="NavigationBar_Loaded" Grid.ColumnSpan="3" Margin="0,0,0,89"/>
        <Image Source="/Resources/Images/logo.jpg" Margin="58,125,58,-50" Grid.Column="1"/>
        <Button Content="Search" Margin="17,235,183,-124" Background="White" Grid.Column="2" />
        <StackPanel RenderTransformOrigin="0.712,1.055" Grid.ColumnSpan="3" Margin="209,235,255,-245">
            <TextBox x:Name="searchTextBox" TextChanged="SearchTextBox_TextChanged" PreviewKeyDown="SearchTextBox_PreviewKeyDown" Height="20"/>
            <ListBox x:Name="suggestionsListBox" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>

</Page>
