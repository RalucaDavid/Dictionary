<Page x:Class="Dictionary.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dictionary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:NavigationBar Loaded="NavigationBar_Loaded" Grid.ColumnSpan="3" Margin="0,0,0,89"/>
        <Image Source="/Resources/Images/logo.jpg" Margin="58,125,58,-50" Grid.Column="1"/>
        <TextBox x:Name="searchTextBox" Margin="192,235,255,-120"  RenderTransformOrigin="0.459,10.301" Grid.ColumnSpan="3"/>
        <Button Content="Search" Margin="17,235,183,-120" Background="White" Grid.Column="2" />
    </Grid>

</Page>
