<Page x:Class="Dictionary.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dictionary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid Background="#BB31E4D7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Exit" Click="ExitClick" Content="Exit"  Margin="177,24,25,-45" Grid.Column="2" Background="DarkViolet"/>
        <Button Content="Add word" Click="AddClick" Grid.ColumnSpan="2" Margin="261,130,0,-165" Background="White"/>
        <Button Content="Modify word" Click="ModifyClick" Grid.ColumnSpan="3" Margin="264,203,264,-238" Background="White"/>
        <Button Content="Delete word" Click="DeleteClick" Grid.ColumnSpan="2" Margin="261,280,0,-315" Background="White"/>
    </Grid>
</Page>
